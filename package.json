{
  "name": "english-assessment-system",
  "version": "1.0.0",
  "description": "AI-powered English proficiency assessment system with voice interaction",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "elevenlabs": "^1.0.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "socket.io": "^4.7.4",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "english",
    "assessment",
    "ai",
    "voice",
    "cefr",
    "language-testing"
  ],
  "author": "English Assessment System",
  "license": "MIT"
}
